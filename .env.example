# BidScents Environment Variables Template
# Copy this file to .env and fill in your actual values

# IMPORTANT: Client-side variables MUST be prefixed with VITE_
# These will be embedded in the built JavaScript bundle

# Supabase Configuration (Required for both client and server)
VITE_SUPABASE_URL="https://your-project.supabase.co"
VITE_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Server-side Supabase Configuration
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-supabase-service-role-key"

# Database
DATABASE_URL="postgresql://user:password@host:port/database"

# Authentication
JWT_SECRET="your-secure-jwt-secret-key"
JWT_EXPIRES_IN="24h"

# Billplz Payment Gateway
BILLPLZ_BASE_URL="https://www.billplz.com/api/v3"
BILLPLZ_SECRET_KEY="your-billplz-secret-key"
BILLPLZ_XSIGN_KEY="your-billplz-xsign-key"
BILLPLZ_COLLECTION_ID="your-billplz-collection-id"

# Application URLs
APP_URL="http://localhost:5000"
CLIENT_URL="http://localhost:3000"

# Environment
NODE_ENV="development"

# Optional
LOG_LEVEL="info"
# REDIS_URL="redis://localhost:6379"