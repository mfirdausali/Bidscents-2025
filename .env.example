# Database Configuration
# Get these from your Supabase project settings
SUPABASE_URL="https://your-project-id.supabase.co"
SUPABASE_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Client-side Supabase configuration
VITE_SUPABASE_URL="https://your-project-id.supabase.co"
VITE_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Security Keys (REQUIRED - Generate secure keys!)
# Generate JWT secret: openssl rand -hex 64
JWT_SECRET="your-secure-jwt-secret-key-here"
JWT_EXPIRES_IN="24h"

# Generate encryption key: openssl rand -hex 32
MESSAGE_ENCRYPTION_KEY="your-secure-encryption-key-here"

# Payment Gateway (Billplz)
# For sandbox/testing use: https://www.billplz-sandbox.com/api
# For production use: https://www.billplz.com/api
BILLPLZ_BASE_URL="https://www.billplz-sandbox.com/api"
BILLPLZ_SECRET_KEY="your-billplz-secret-key"
BILLPLZ_XSIGN_KEY="your-billplz-xsignature-key"
BILLPLZ_COLLECTION_ID="your-billplz-collection-id"

# Application Settings
APP_URL="http://localhost:5000"
NODE_ENV="development"

# Object Storage (Optional - for image uploads)
REPLIT_OBJECT_STORAGE_BUCKET_ID="your-object-storage-bucket-id"